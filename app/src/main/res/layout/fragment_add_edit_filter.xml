<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.filters.AddEditFilterFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                style="@style/EditorCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/card_horizontal_margin"
                android:layout_marginTop="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/EditorTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="4dp"
                        android:text="Марка и модель" />

                    <include layout="@layout/hr" />

                    <RelativeLayout
                        android:id="@+id/f_edit_mark_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/f_edit_mark_label"
                            style="@style/EditorLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Марка" />

                        <TextView
                            android:id="@+id/f_edit_mark_value"
                            style="@style/EditorValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="Honda" />
                    </RelativeLayout>


                    <include layout="@layout/hr" />


                    <RelativeLayout
                        android:id="@+id/f_edit_model_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/f_edit_model_label"
                            style="@style/EditorLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Модель" />

                        <TextView
                            android:id="@+id/f_edit_model_value"
                            style="@style/EditorValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="Accord" />
                    </RelativeLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                style="@style/EditorCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/card_horizontal_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/EditorTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="4dp"
                        android:text="Локация" />

                    <include layout="@layout/hr" />

                    <RelativeLayout
                        android:id="@+id/f_edit_region"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/f_edit_region_label"
                            style="@style/EditorLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Регион" />

                        <TextView
                            android:id="@+id/f_edit_region_value"
                            style="@style/EditorValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="Московская область" />
                    </RelativeLayout>

                    <include layout="@layout/hr" />

                    <RelativeLayout
                        android:id="@+id/f_edit_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/f_edit_city_label"
                            style="@style/EditorLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Город" />

                        <TextView
                            android:id="@+id/f_edit_city_value"
                            style="@style/EditorValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="Подольск" />
                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/card_horizontal_margin"
                style="@style/EditorCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/EditorTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="4dp"
                        android:text="Свойства" />

                    <include layout="@layout/hr" />

                    <RelativeLayout
                        android:id="@+id/f_edit_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/f_edit_price_label"
                            style="@style/EditorLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Цена" />

                        <TextView
                            android:id="@+id/f_edit_price_value"
                            style="@style/EditorValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="От 50000р до 230000р" />
                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

</FrameLayout>