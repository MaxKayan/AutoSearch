<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


    <!-- QueryFilter Add-Edit view -->
    <style name="EditorCard">
        <item name="cardCornerRadius">6dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="EditorTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
    </style>

    <style name="EditorLabel">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <style name="EditorValue">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <!-- Rounded Action Button -->
    <style name="RoundedActionButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@drawable/rounded_gradient_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EditorItem">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>


    <!-- Search Edit Text -->
    <style name="SearchEditText">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

</resources>
